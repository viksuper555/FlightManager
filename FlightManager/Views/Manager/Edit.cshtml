@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FlightManager.ViewModels.Manager.EditManagerViewModel
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Edit User</h1>
        <form method="post" action="/Manager/Edit">
            <div>
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.FirstName">
                </div>

                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.LastName">
                </div>
                <div class="form-group">
                    <label for="egn">EGN</label>
                    <input type="text" class="form-control" id="egn" name="EGN" value="@Model.EGN">
                </div>
                <div class="form-group">
                    <label for="departureTime">Address</label>
                    <input type="text" class="form-control" id="address" name="Address" value="@Model.Address">
                </div>
                <div class="form-group" style="display: none">
                    <input type="text" class="form-control" id="id" name="Id" value="@Model.Id">
                </div>
                <div class="form-group text-center">
                    @if (User.IsInRole("Admin"))
                    {
                        <button type="submit" class="btn btn-primary">Edit</button>
                    }   
                </div>
                @* TODO: Make new registrations users by default, then Admins can make them managers *@
            </div>
        </form>

    </div>
</section>

